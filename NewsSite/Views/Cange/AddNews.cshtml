@model NewsSite.ViewModels.NewsViewModel
<title>@ViewBag.Title</title>

<link href="~/css/bootstrap.min.css " rel="stylesheet" type="text/css" />
<link href="~/css/Style.css" rel="stylesheet" type="text/css" />

<form asp-action="AddNews" asp-controller="Cange" method="post" enctype="multipart/form-data">


    <div class="form-group">
        <label asp-for="Name" class="control-label">Заголовок</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="shortText" class="control-label">Короткое описание</label>
        <input type="text" asp-for="shortText" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LongText" class="control-label">Текст новости</label>
        <input type="text" asp-for="LongText" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Time" class="control-label">Время добавления</label>
        <input type="datetime" asp-for="Time" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="isFavorite" class="control-label">Выводить на главную</label>
        <select name="isFavorite">
            <option value="True">Да</option>

            <option value="False">Нет</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Category">Выберите категорию:</label>
        <select asp-for="CategoryId" asp-items="@Model.Categories.Select(_=> new SelectListItem { Value = _.Id.ToString(), Text = _.CategoryName, Selected = _.Id == Model.CategoryId})">
        </select>

    </div>

    <div class="form-group">
        <input type="file" name="Photo" asp-for="Photo" class="form-control" />
    </div>
    <div class="form-group">
        <input type="hidden" name="img" asp-for="img" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Опубликовать" class="btn btn-dark" />

    </div>


</form>
