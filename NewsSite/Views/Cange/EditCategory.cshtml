        <label asp-for="CategoryName" class="control-label">Название категории:</label>
        <input type="text" asp-for="CategoryName" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-dark" />

    </div>
</form>